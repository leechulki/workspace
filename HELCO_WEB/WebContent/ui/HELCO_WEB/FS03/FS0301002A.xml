function grd_list_OnCellDblClick(obj,nRow,nCell,nX,nY,nPivotIndex)
{
	var arg = "";
	var ocntStat = ds_zfst0304_list.GetColumn(nRow, "OCNT_STAT");
	if( length(ocntStat) == 0 ) {
	    ocntStat = "230";
	}
	arg = arg +"ocntNumb="+quote(ds_zfst0304_list.GetColumn(nRow, "OCNT_NUMB"));
	arg = arg +" rfctSeqn="+quote(ds_zfst0304_list.GetColumn(nRow, "RFCT_SEQN"));
	arg = arg +" ocntStat="+quote(ocntStat);
	arg = arg +" vbeln="+quote(ds_zfst0304_list.GetColumn(nRow, "VBELN"));
	gfn_openWin("FS0301003A", arg);
}

/********************************************************************************
* 기      능   : 그리드 헤더 클릭시 정렬 처리 
********************************************************************************/
function grd_list_OnHeadClick(obj,nCell,nX,nY,nPivotIndex)
{
