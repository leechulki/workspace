			ds_cond2.ClearData();
			ds_cond2.AddRow();	
			ds_cond2.SetColumn(0,"DOC", ds_list.getColumn(0,"DOC"));
			ds_cond2.SetColumn(0,"SIR", ds_list.getColumn(0,"SIR"));
			ds_cond2.SetColumn(0,"MID", ds_list.getColumn(0,"MID"));
			ds_cond2.SetColumn(0,"DOCNO", ds_list.getColumn(0,"DNO"));
			
			tit_clearActionInfo();
			tit_addSearchActionInfo("cs01:CS0108005B_U1");	// PST='A6' & 청구번호생성
			tit_addSingleActionInfo("cs01:CS0108005B_I3");	//청구내역을 SAP테이블에 넣기
			
