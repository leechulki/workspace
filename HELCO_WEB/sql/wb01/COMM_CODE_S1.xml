<?xml version="1.0" encoding="euc-kr"?>
<query dynamic="true">
	<type>select</type>
	<description><![CDATA[코드 정보 조회]]></description>
	<reload>true</reload>
	<monitoring>true</monitoring>
	<result-count>0</result-count>
	<statement>
		SELECT CODE2 AS CODE
		     , CTEXT2 AS CODE_NAME
		  FROM SAPHEE.ZLCODE
		 WHERE MANDT=#G_MANDT#
		   AND LANG = #G_LANG# 
		   AND CODE1 = #S_CODE#
		   <isNotNull col="S_GUBN">
			#S_GUBN+#
		   </isNotNull>
		<isNull col="S_ORDER">
		 ORDER BY CODE
		</isNull>
		<isNotNull col="S_ORDER">
		  #S_ORDER+#
		</isNotNull>	
		WITH UR
	</statement>
	<input default-name="ds_cond">
		<col name="G_MANDT" size="3" type="VARCHAR" description="클라이언트" /> 
		<col name="S_CODE" 	size="5" type="VARCHAR" description="대분류" /> 
		<col name="S_GUBN" 	size="100" type="VARCHAR" description="추가조건" /> 
		<col name="S_DPT" 	size="100" type="VARCHAR" description="부서명" /> 
	</input>
	<output default-name="ds_codeList">
		<col name="CODE" size="15" type="VARCHAR" description="" /> 
		<col name="CODE_NAME" size="60" type="VARCHAR" description="" /> 
	</output>
</query>
